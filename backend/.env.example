# ── App ──────────────────────────────────────────────────
APP_NAME=aic-persona-agent
APP_VERSION=0.1.0
DEBUG=true

# ── Supabase ─────────────────────────────────────────────
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# ── Security ─────────────────────────────────────────────
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_SECRET_KEY=your-fernet-key-here
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-jwt-secret-here
JWT_ALGORITHM=HS256
JWT_EXPIRY_MINUTES=1440

# ── LLM (Provider-Agnostic) ─────────────────────────────
# Options: gemini | openai | groq
LLM_PROVIDER=gemini
LLM_MODEL=gemini-2.0-flash
LLM_API_KEY=your-gemini-api-key
LLM_TEMPERATURE=0.7

# ── Embedding ────────────────────────────────────────────
EMBEDDING_PROVIDER=gemini
EMBEDDING_MODEL=text-embedding-004
EMBEDDING_DIMENSIONS=3072

# ── School API ───────────────────────────────────────────
SCHOOL_API_BASE_URL=https://ttsv.tvu.edu.vn/public/api
SCHOOL_CACHE_TTL_HOURS=24

# ── Agent ────────────────────────────────────────────────
AGENT_RECURSION_LIMIT=5
AGENT_MEMORY_WINDOW_SIZE=7
AGENT_SUMMARY_THRESHOLD=10
