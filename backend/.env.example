# ── App ──────────────────────────────────────────────────
APP_NAME=aic-persona-agent
APP_VERSION=0.1.0
DEBUG=true
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ── Supabase ─────────────────────────────────────────────
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# ── Security ─────────────────────────────────────────────
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_SECRET_KEY=your-fernet-key-here
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-jwt-secret-here
JWT_ALGORITHM=HS256
JWT_EXPIRY_MINUTES=1440

# ── LLM (Provider-Agnostic) ─────────────────────────────
# Options: gemini | openai | groq
LLM_PROVIDER=gemini
LLM_MODEL=gemini-3-flash-preview
LLM_API_KEY=your-gemini-api-key
LLM_TEMPERATURE=1.0

# ── Image Model ──────────────────────────────────────────
IMAGE_MODEL=gemini-3-pro-image-preview
IMAGE_MODEL_ENABLED=true

# ── Embedding ────────────────────────────────────────────
EMBEDDING_PROVIDER=gemini
EMBEDDING_MODEL=gemini-embedding-001
EMBEDDING_DIMENSIONS=768

# ── School API ───────────────────────────────────────────
SCHOOL_API_BASE_URL=https://ttsv.tvu.edu.vn/public/api
SCHOOL_CACHE_TTL_HOURS=24
SCHOOL_API_TIMEOUT=30

# ── Agent ────────────────────────────────────────────────
AGENT_RECURSION_LIMIT=25
AGENT_MEMORY_WINDOW_SIZE=7
AGENT_SUMMARY_THRESHOLD=10

# ── Tavily (AI Search Engine) ────────────────────────────
TAVILY_API_KEY=your-tavily-api-key

# ── OpenWeather (Weather API) ────────────────────────────
OPENWEATHER_API_KEY=your-openweather-api-key

# ── Zalo Bot (Push Notifications + Webhook) ──────────────
ZALO_BOT_TOKEN=your-zalo-bot-token
ZALO_CHAT_ID=your-zalo-chat-id
ZALO_WEBHOOK_SECRET=your-webhook-secret
